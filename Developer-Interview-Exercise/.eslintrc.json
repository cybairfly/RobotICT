{
    "env": {
        "browser": true,
        "commonjs": true,
        "meteor": true,
        "mongo": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb",
        "airbnb/hooks",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:jsx-a11y/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "max-len": "off",
        "camelcase": "off",
        "no-shadow": "off",
        "no-console": "off",
        "no-unused-vars": "off",
        "no-return-assign": "off",
        "no-confusing-arrow": "off",
        "object-curly-spacing": "off",
        "implicit-arrow-linebreak": "off",
        "nonblock-statement-body-position": "off",
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "curly": [
            "warn",
            "multi-or-nest"
        ],
        "operator-linebreak": [
            "warn",
            "before",
            {
                "overrides": {
                    "?": "ignore",
                    ":": "ignore"
                }
            }
        ]
    },
    // negated first!
    "ignorePatterns": [
        "!*/",
        "!*.js",
        "!*.ts",
        "!*.json",
        "~*",
        "apify_storage"
    ]
}